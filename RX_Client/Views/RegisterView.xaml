<UserControl x:Class="RX_Client.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:RX_Client.Utils.Converters;assembly=RX_Client"
             Height="650" Width="400">

    <Grid Background="#121212">
        <StackPanel VerticalAlignment="Center" Margin="40">
            <TextBlock Text="Đăng Ký Tài Khoản" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

            <TextBox materialDesign:HintAssist.Hint="Tên đăng nhập" Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                     Text="{Binding Username}" Foreground="White" Margin="0,0,0,15"/>

            <PasswordBox x:Name="TxtPass" materialDesign:HintAssist.Hint="Mật khẩu" Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}"
                         Foreground="White" Margin="0,0,0,15" PasswordChanged="TxtPass_PasswordChanged"/>

            <PasswordBox x:Name="TxtConfirm" materialDesign:HintAssist.Hint="Nhập lại mật khẩu" Style="{DynamicResource MaterialDesignFloatingHintPasswordBox}"
                         Foreground="White" Margin="0,0,0,15" PasswordChanged="TxtConfirm_PasswordChanged"/>

            <!-- Chọn Role -->
            <ComboBox materialDesign:HintAssist.Hint="Bạn là ai?" 
                      Style="{DynamicResource MaterialDesignFloatingHintComboBox}"
                      ItemsSource="{Binding Roles}" 
                      SelectedItem="{Binding SelectedRole}"
                      Foreground="White" Margin="0,0,0,30">
            </ComboBox>

            <TextBlock Text="{Binding ErrorMessage}" Foreground="#FF5252" TextWrapping="Wrap" 
                       Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVis}}" Margin="0,0,0,15"/>

            <Button Content="ĐĂNG KÝ" Command="{Binding RegisterCommand}" Style="{DynamicResource MaterialDesignRaisedButton}"
                    IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBool}}"/>

            <Button Content="Quay lại Đăng nhập" Command="{Binding BackToLoginCommand}" Style="{DynamicResource MaterialDesignFlatButton}" Margin="0,15,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>